{
  "pools": [
    {
      "user": "wallet.worker",
      "url": "stratum+tcp://url:port",
      "pass": "x"
    }
  ],

  "api-bind-http": 0,
  "json-response": true,

  "retries": 3,
  "retry-pause": 10,
  "timeout": 180,
  "no-watchdog": true,

  "algo": "ethash",
  "validate-shares": true,

  "log-path": "/var/log/miner/trexsecondary/trexsecondary.log",

  "exit-on-cuda-error": true,
  "exit-on-connection-lost": false
}
